<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:view="org.robotlegs.demos.helloflex.view.*"
				layout="absolute"
				paddingBottom="0"
				paddingLeft="0"
				paddingRight="0"
				paddingTop="0"
				viewSourceURL="srcview/index.html"
				preinitialize="onPreInitialize()">

	<mx:Script>
		<![CDATA[
			import org.robotlegs.demos.helloflex.HelloFlexContext;
			
			private var context:HelloFlexContext;
			
			private function onPreInitialize():void
			{
				context = new HelloFlexContext(this);
			}
		]]>
	</mx:Script>

	<mx:HDividedBox width="450"
					height="450"
					verticalCenter="0"
					horizontalCenter="0">

		<mx:TabNavigator width="100%"
						 height="100%">
			<view:InfoCanvas label="RobotLegs"/>
			<view:DemoCanvas label="Mini Demo"/>
		</mx:TabNavigator>

		<mx:VDividedBox width="160"
						height="100%">
			<view:MessageList/>
			<view:SimpleLogBox/>
		</mx:VDividedBox>

	</mx:HDividedBox>

</mx:Application>
