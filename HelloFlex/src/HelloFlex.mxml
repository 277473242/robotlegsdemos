	xmlns:components="net.boyblack.robotlegs.demos.helloflex.view.components.*"
	viewSourceURL="srcview/index.html"
	creationComplete="onCC()"
	layout="absolute"
	paddingBottom="0"
	paddingLeft="0"
	paddingRight="0"
	paddingTop="0">

	<mx:Script>
		<![CDATA[
			import net.boyblack.robotlegs.demos.helloflex.HelloFlexContext;

			private var helloContext:HelloFlexContext;

			private function onCC():void
			{
				helloContext = new HelloFlexContext( this );
			}
		]]>
	</mx:Script>

	<mx:HDividedBox width="450" height="450"
		verticalCenter="0" horizontalCenter="0">

		<mx:TabNavigator width="100%" height="100%">
			<components:InfoCanvas label="RobotLegs"/>
			<components:DemoCanvas label="Mini Demo"/>
		</mx:TabNavigator>

		<mx:VDividedBox width="160" height="100%">
			<components:MessageList/>
			<components:SimpleLogBox/>
