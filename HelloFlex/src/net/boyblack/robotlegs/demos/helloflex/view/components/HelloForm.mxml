<?xml version="1.0" encoding="utf-8"?>
<mx:Form xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:components="net.boyblack.robotlegs.demos.helloflex.view.components.*"
	defaultButton="{addMessageBtn}">

	<mx:Script>
		<![CDATA[
			import net.boyblack.robotlegs.demos.helloflex.view.events.HelloFormEvent;

			public function getMessage():String
			{
				return messageTxt.text;
			}
		]]>
	</mx:Script>

	<mx:FormHeading label="Hello World"/>

	<mx:FormItem label="Your Message">
		<mx:TextInput id="messageTxt" text="Hello World!"/>
	</mx:FormItem>

	<mx:FormItem>
		<mx:Button id="addMessageBtn" label="Add Message"
			enabled="{messageTxt.text.length>0}"
			click="dispatchEvent(new HelloFormEvent(HelloFormEvent.FORM_SUBMITTED))"/>
	</mx:FormItem>

	<mx:FormItem>
		<components:ClearMessagesButton/>
	</mx:FormItem>

</mx:Form>
