<?xml version="1.0" encoding="utf-8"?>
<s:Application 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/halo" 
	creationComplete="creationCompleteHandler(event)" 
	xmlns:components="com.joelhooks.robotlegs.demos.imagegallery.views.components.*" maxWidth="520">
	<s:layout>
		<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import com.joelhooks.robotlegs.demos.imagegallery.ImageGalleryContext;
			import mx.events.FlexEvent;
			
			private var galleryContext:ImageGalleryContext;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.galleryContext = new ImageGalleryContext( this );
			}

		]]>
	</fx:Script>
	<s:Group width="100%" height="30">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"/>
		</s:layout>
		<mx:Image id="logo"
			verticalCenter="0" horizontalCenter="0"
			source="assets/RobotLegsLogoSmallWeb.png"/>
		<s:SimpleText truncation="1" text="Robotlegs: Image Gallery Demo" fontSize="24" fontWeight="bold" verticalAlign="middle" textAlign="left" width="100%" height="100%" baselineShift="2"/>		
	</s:Group>
	<components:GallerySearch id="search" width="100%"/>
	<components:GalleryView id="gallery"/>
	
</s:Application>
